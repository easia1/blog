<div class="flex flex-col md:flex-row w-screen h-screen">
  <div class="front-hero bg-cover bg-center bg-no-repeat order-first basis-2/12 md:basis-4/6 lg:basis-2/3 bg-repeat w-full h-full  hidden md:flex flex-col p-10 md:p-28">
    <h1 class="text-3xl lg:block font-extrabold md:text-5xl lg:text-6xl text-white">Be more productive.</h1>
    <p class="text-2xl lg:block font-light md:text-3xl lg:text-4xl text-white">Organize your tasks with <%= image_tag 'logo-long-wht.svg', class:" inline align-baseline h-5 md:h-6 lg:h-7" %></p>

  </div>
  <div class="basis-10/12 md:basis-2/3 lg:basis-2/6 h-full place-content-center flex flex-col justify-center items-center p-10">
    <div class="flex flex-col w-full">
      <div>
        <%= image_tag 'ico.svg', class:" h-12 w-auto" %>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">Sign up</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'mt-8 '}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <% flash.each do |key, value| %>
          <div class="message">
            <div class="alert-message <%= key %> fade in">
              <a class="close" href="#">&times</a>
              <center><strong><%= value %></strong></center>
            </div>
          </div>
        <% end %>


        <div class="field mb-6">
          <%= f.label :name, class:"block uppercase text-slate-600 text-xs font-bold after:content-['*'] after:ml-0.5 after:text-red-500" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :email, class:"block uppercase text-slate-600 text-xs font-bold after:content-['*'] after:ml-0.5 after:text-red-500" %>
          <%= f.email_field :email, autocomplete: "email", class:"peer form-control" %>
          <p class="mt-2 invisible peer-invalid:visible text-pink-600 text-sm ease-linear transition-all duration-150">
            Please provide a valid email address.
          </p>
        </div>

        <div class="field mb-6">
          <%= f.label :password, class:"block uppercase text-slate-600 text-xs font-bold after:content-['*'] after:ml-0.5 after:text-red-500" %>
          <% if @minimum_password_length %>
          <em class="text-sm text-slate-600">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="field mb-6">
          <%= f.label :password_confirmation, class:"block uppercase text-slate-600 text-xs font-bold after:content-['*'] after:ml-0.5 after:text-red-500" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>

        
        <%= f.submit "Sign up", class:"btn-primary w-full"  %>
        
      <% end %>
      <p class="mt-3 text-sm text-gray-600">Already have an account? <%= link_to "Log in", new_session_path(resource_name), class:"font-medium text-sky-600 hover:text-sky-500" %></p>
    </div>
  </div>
</div>